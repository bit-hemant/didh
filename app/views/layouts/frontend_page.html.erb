<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
	<head>

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title>Debates in the Digital Humanities</title>
		<!-- <meta name="description" content=""> -->
		<meta name="viewport" content="width=device-width,initial-scale=1">

		<%= stylesheet_link_tag    "application", :media => "all" %>

	    <script type="text/javascript" src="//use.typekit.net/jlo5jay.js"></script>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>

		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-37686216-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script> 
		
	</head>
	<body class="interior page">
		<% if params[:action] == 'book'%>
			<header class="book-header">
				<ul class="nav-interior">
					<li class="back-link">
						<%= link_to 'Return to About', {controller: '/pages', action: 'about'}, class: 'icon-chevron-left' %>
					</li>
					<li class="<%= 'active' if @edition == '2013' %>">
						<%= link_to '2013 Edition', :controller => '/pages', :action => 'book' %>
					</li>
					<li class="<%= 'active' if @edition == '2016' %>">
						<%= link_to '2016 Edition', :controller => '/pages', :action => 'book' %>
					</li>
				</ul>
			</header>
		<% elsif params[:action] == 'about' %>
			<header class="about-header">
			  <ul class="nav-interior">
			    <li class="back-link">
			      <%= link_to 'Return to Reading', {controller: '/debates', action: 'index'}, class: 'icon-chevron-left' %>
			    </li>
			    <li class="active">
			      <%= link_to 'About', :controller => '/pages', :action => 'about' %>
			    </li>
			    <li>
			      <%= link_to 'News', :controller => '/pages', :action => 'news' %>
			    </li>
			    <li>
			      <%= link_to 'CFPs', :controller => '/pages', :action => 'cfps' %>
			    </li>
				<li class="column-six-fifths regular">Print Editions</li>
			  </ul>
			</header>
		<% else %>
			<header class="page-header">
				<h1 class="interior-title"><a href="/">Debates in the Digital Humanities</a></h1>
				<ul class="nav-interior">
					<%= render "shared/menu" %>
				</ul>
			</header>
		<% end %>

		<% if params[:action] == 'book' or params[:action] == 'about'%>
			<section class="interior-content-bare js-content gray-lighter">
				<%= yield %>
			</section>
		<% else %>
			<section class="interior-content-page js-content">
				<%= yield %>
			</section>
		<% end %>
		<nav class="nav-content">
		</nav>

		<!--[if lt IE 9]>
			<script src="Resources/Javascript/Libs/Selectivizr/selectivizr-min.js"></script>
		<![endif]-->

	</body>
</html>