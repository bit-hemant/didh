<div class="chapter-section ">
	<h1 class="chapter-heading"><%= text.get('title') %></h1>
	<h3 class="chapter-byline"><%= text.getAuthorsList() %></h3>
</div>

<div class="chapter-section chapter-body">
	<%= text.get('body') %>
</div>

<% if(text.get('notes')) { %>
<div class="chapter-section chapter-notes">
	<h2 class="chapter-heading">Notes</h2>
	<%= text.get('notes') %>
</div>
<% } %>

<% if(text.get('bibliography')) { %>
<div class="chapter-section chapter-bibliography">
	<h2 class="chapter-heading">Bibliography</h2>
	<%= text.get('bibliography') %>
</div>
<% } %>

<div class="chapter-section chapter-bibliography">
	<h2 class="chapter-heading">API and Atom Feed</h2>
	<p class="rf">
  	Data about this text is available via read-only JSON API endpoints: <a target="_blank" href="/texts/<%= text.id %>/sentences.json">sentences</a>,
  	<a target="_blank" href="/texts/<%= text.id %>/annotations.json">annotations</a>, <a target="_blank" href="/texts/<%= text.id %>/comments.json">comments</a>, and <a href="/texts/<%= text.id %>/keywords.json">index keywords</a>.
	</p>
	<p class="rf">
	  Comments posted on this text can be followed by subscribing to this text's <a target="_blank" href="/texts/<%= text.id %>/comments.atom">Atom Feed</a>.
	</p>
</div>
